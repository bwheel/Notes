			"label": "start database",
			"dockerCompose": {
				"up": {
					"detached": true,
					"build": true
				},
				"files": [
					"${workspaceFolder}/ci/docker-compose.yml"
				]
			},
		},
		{
			"type": "npm",
			"script": "build",
			"group": "build",
