			"detail": "webpack --mode development",
			"options": {
				"cwd": "./src/Notes/"
			},
			"dependsOn": [
				"npm: install"
			]
		},
		{
			"type": "shell",
			"label": "npm: install",
			"command": [
				"npm",
				"install"
			],
			"options": {
				"cwd": "./src/Notes/"
			}
		}
